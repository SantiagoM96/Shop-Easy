<header class="navBar">
    <a href="/profile"><img src="/img/usuario.png" alt="Imagen de perfil" class="navImg"></a>
    <div>
        <p>Welcome {{user.first_name}} {{#if user.last_name}}{{user.last_name}}{{/if}}</p>
        {{#if user.email}} <p>Email: {{user.email}}</p> {{/if}}
        <p>Role: {{user.role}}</p>
    </div>
    <a href="/carts/{{user.cart}}"><img src="/img/carrito.png" alt="Icono de carrito" class="navImg"></a>
    <a href="/logout"><img src="/img/logout.png" alt="Icono para cierre de sesiÃ³n" class="navImg"></a>
</header>

<section class="productsContainer">
    <article class="productCardDetail">
        <h4>{{product.title}}</h4>
        <p><strong>Description: </strong>{{product.description}}</p>
        <p><strong>Code: </strong>{{product.code}}</p>
        <p><strong>Price: </strong>${{product.price}}</p>
        <p><strong>Stock: </strong>{{product.stock}}</p>
        <p><strong>Category: </strong>{{product.category}}</p>
        <p><strong>Status: </strong>
            {{#if product.stock}}
            Available </p>
        <button class="button greenButton addToCartButton" data-user-id="{{user.userId}}" data-cart-id="{{user.cart}}"
            data-product-id="{{product._id}}">Add
            to
            Cart</button>
        {{else}}
        Not Available
        </p>
        {{/if}}
    </article>
</section>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/productsAndCart/productDetails.js"></script>